<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="NumberPickerInputText" parent="@android:style/TextAppearance.Large.Inverse">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="NumberPickerUpButton" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/numberpicker_up_btn_holo_light</item>
        <item name="android:paddingTop">22dip</item>
        <item name="android:paddingBottom">22dip</item>
    </style>

    <style name="NumberPickerDownButton" parent="@android:style/Widget.ImageButton">
        <item name="android:background">@drawable/numberpicker_down_btn_holo_light</item>
        <item name="android:paddingTop">22dip</item>
        <item name="android:paddingBottom">22dip</item>
    </style>

    <style name="NumberPickerInputText" parent="@android:style/Widget.EditText">
        <item name="android:textAppearance">@style/NumberPickerInputText</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/numberpicker_input</item>
    </style>

    <!-- screens' header text -->

    <style name="titleText">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">40sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">-10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="workoutTypeTitleText">
        <item name="android:textSize">33sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!-- homescreen styles -->

    <style name="mainButtonText">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">25sp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:drawableRight">@drawable/navigation_next_item</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="textButton"> 
        <item name="android:layout_width">275dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:drawableRight">@drawable/navigation_next_item</item>
        <item name="android:drawablePadding">30dp</item>
        <item name="android:background">@drawable/rad_button</item>
    </style>

    <!-- timer styles -->
    <style name="finishButton">
        <item name="android:background">@drawable/rad_button</item>
    </style>

    <style name="setButton">
        <item name="android:background">@drawable/rad_button</item>
    </style>

    <!-- header style -->
    <style name="CustomTheme" parent="android:Theme">
        <item name="android:windowTitleSize">80px</item>
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>
    </style>

    <style name="WindowTitleBackground">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>