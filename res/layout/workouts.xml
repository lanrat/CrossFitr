<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_main"
    android:orientation="vertical" >

    <!--
    <ImageView
        android:id="@+id/main_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-15dp"
        android:src="@drawable/main_header" />
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/workouts_title"
            style="@style/titleText"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_weight="4"
            android:text="Workouts" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/redLine" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="342dp"
        android:gravity="center"
        android:orientation="vertical" 
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/wod_button"
            style="@style/textButton"
            android:background="@drawable/rad_button"
            android:drawableLeft="@drawable/icons_wod"
            android:drawablePadding="15dp"
            android:text="WOD"
            android:textColor="@color/wod" />

        <Button
            android:id="@+id/hero_button"
            style="@style/textButton"
            android:drawableLeft="@drawable/icons_heros"
            android:text="Hero"
            android:textColor="@color/heroes" />

        <Button
            android:id="@+id/girl_button"
            style="@style/textButton"
            android:drawableLeft="@drawable/icons_girls"
            android:text="Girls"
            android:textColor="@color/girls" />

        <Button
            android:id="@+id/custom_button"
            style="@style/textButton"
            android:drawableLeft="@drawable/icons_custom"
            android:drawablePadding="15dp"
            android:text="Custom"
            android:textColor="@color/custom" />
    </LinearLayout>

</LinearLayout>